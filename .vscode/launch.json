{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug raytracer",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/raytracer",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "console": "integratedTerminal",
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "Build"
      }
  ]
}
